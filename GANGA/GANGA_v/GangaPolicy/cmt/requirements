########################################################################
# Path cleaner
macro strip_script_gangapolicy "$(GANGAPOLICYROOT)/scripts/StripPath" WIN32 "$(GANGAPOLICYROOT)\scripts\StripPath"

cmtpath_pattern \
    setup_script $(strip_script_gangapolicy) ;

